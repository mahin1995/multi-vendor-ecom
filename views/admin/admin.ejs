<!DOCTYPE html>
<html lang="en" dir="ltr">

<%- include('../layout/head', {title :title}); %>

   <body>
      <%- include('../layout/quickviewmodal'); %>
         <%- include('../layout/mobilemenu'); %>
            <!-- site -->
            <div class="site">
               <%- include('../layout/navbar',{fixed:true}); %>
                  <!-- site__body -->
                  <div class="site__body">
                     <div class="page-header">
                        <div class="page-header__container container">
                           <div class="page-header__breadcrumb">
                              <nav aria-label="breadcrumb">
                                 <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="index.html">Home</a> <svg
                                          class="breadcrumb-arrow" width="6px" height="9px">
                                          <use xlink:href="images/sprite.svg#arrow-rounded-right-6x9"></use>
                                       </svg></li>
                                    <li class="breadcrumb-item"><a href="#">Amar Bazar</a> <svg class="breadcrumb-arrow"
                                          width="6px" height="9px">
                                          <use xlink:href="images/sprite.svg#arrow-rounded-right-6x9"></use>
                                       </svg></li>
                                    <li class="breadcrumb-item active" aria-current="page">Admin Panel</li>
                                 </ol>
                              </nav>
                           </div>
                           <div class="page-header__title">
                              <h1>Admin Panel</h1>
                           </div>
                        </div>
                     </div>
                     <div class="container">
                        <div class="row">
                           <%- include('./sidebar') %>

                              <div class="col-12 col-lg-8">
                                 <div class="block">
                                    <div class="card mb-lg-0">
                                       <div class="card-body">
                                          <h3 class="card-title">Product </h3>
                                          <div class="form-row">
                                             <div class="form-group col-md-6">
                                                <label for="checkout-first-name">Name</label>
                                                <input type="text" class="form-control" name="name"
                                                   id="checkout-first-name" placeholder="First Name">
                                             </div>
                                             <div class="form-group col-md-6">
                                                <label for="checkout-country">type</label>
                                                <select name="type" id="checkout-country" class="form-control">
                                                   <option value="">Select a type...</option>
                                                   <option value="best">Best</option>
                                                   <option value="top">Top</option>
                                                   <option value="special">Special</option>

                                                </select>
                                             </div>
                                             <div class="form-row">

                                             </div>
                                             <div class="form-group col-md-4">
                                                <label for="checkout-last-name">Unit</label>
                                                <input type="number" name="unit" class="form-control"
                                                   id="checkout-last-name" placeholder="Unit">
                                             </div>
                                             <div class="form-group col-md-4">
                                                <label for="checkout-last-name">Price</label>
                                                <input type="number" name="price" class="form-control"
                                                   id="checkout-last-name" placeholder="price">
                                             </div>
                                             <div class="form-group col-md-4">
                                                <label for="checkout-country">
                                                   Available
                                                </label>
                                                <select name="available" id="checkout-country" class="form-control">
                                                   <option value="">Select a Available...</option>
                                                   <option value="true">Yes</option>
                                                   <option value="false">NO</option>

                                                </select>
                                             </div>

                                             <div class="form-group">
                                                <label for="checkout-company-name">Suplier <span
                                                      class="text-muted">(Optional)</span></label>
                                                <input type="text" name="suplier" class="form-control"
                                                   id="checkout-company-name" placeholder="Company Name">
                                             </div>
                                             <div class="form-group col-md-4">
                                                <label for="checkout-company-name">Info <span
                                                      class="text-muted">(Optional)</span></label>
                                                <input type="text" name="info" class="form-control"
                                                   id="checkout-company-name" placeholder="Info">
                                             </div>
                                             <div class="form-group col-md-4">
                                                <label for="checkout-country">Brand</label>
                                                <select id="checkout-country" class="form-control" name="brand">
                                                   <option>Select a Brand...</option>
                                                   <option value="">United States</option>

                                                </select>
                                             </div>
                                             <div class="form-group col-md-4">
                                                <label for="checkout-country">Category</label>
                                                <select id="checkout-country" class="form-control" name="category">
                                                   <option>Select a Category...</option>
                                                   <option value="">United States</option>

                                                </select>
                                             </div>
                                             <div class="form-group col-md-4">
                                                <label for="checkout-country">subcategories</label>
                                                <select id="checkout-country" class="form-control" name="subcategories">
                                                   <option>Select a subcategories...</option>
                                                   <option value="">United States</option>

                                                </select>
                                             </div>
                                             <div class="form-group col-md-6"><label for="checkout-comment">Spacification <span
                                                      class="text-muted">(Optional)</span></label> <textarea
                                                   id="checkout-comment" class="form-control" rows="4"></textarea></div>
                                             <div class="form-group col-md-6"><label for="checkout-comment">description <span
                                                      class="text-muted">(Optional)</span></label> <textarea
                                                   id="checkout-comment" class="form-control" rows="4"></textarea></div>
                                             <div class="form-group col-md-6"><label for="checkout-comment">Image </label>
                                                      <!-- <input type="file" class="form-control" id="id_product_img" name="product_pic" accept="image/*"> -->
                                                      <input type="file" class="form-control"  id="id_product_img" width="100px" height="100px" multiple ><br/>
                                                   </div>
                                             <div class="form-group col-md-6"><label for="checkout-comment">Image </label>
                                                <img src="" id="id_image_uploded" alt="">
                                             </div>


                                                   <button type="button" class="btn btn-primary btn-xl btn-block cart__checkout-button">Add Product</>
                                          </div>

                                       </div>

                                    </div>



                                
                                 </div>
                               
                           
                              </div>
                        </div>
                     </div>
                  </div>
            </div><!-- site__body / end -->
            <%- include('../layout/footer'); %>
               <script src="/js/admin.js"></script>
               </div><!-- site / end -->
   </body>

</html>